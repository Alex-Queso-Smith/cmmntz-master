- content_for :title, @article.title
%br/
%br/
.article-wrapper
  .article-header
    %h3= @article.title
    %h4= @article.author.name
    %h4= display_date @article.publish_date
    .article-header-image
      = article_banner @article

  %br/
  .article-body.row.justify-content-center
    .body_text
      = markdown(@article.body)
  .center-block
    = article_image @article.top_image
  - if !@article.body_2.blank?
    .article-body.row.justify-content-center
      .body_text
        = markdown(@article.body_2)
  .center-block
    = article_image @article.middle_image
  - if !@article.body_3.blank?
    .article-body.row.justify-content-center
      .body_text
        = markdown(@article.body_3)
  .center-block
    = article_image @article.footer_image



<div id="cf-comments-app" class="cf-bs" data-gallery-id="#{@art.gallery_id}" data-art-id="#{@art.id}" data-art-type="art" data-user-id="#{current_user.id if current_user}" data-user-font="#{current_user.font if current_user}" data-user-theme="#{current_user.color_theme if current_user}"/>

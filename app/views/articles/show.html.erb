<%  content_for :title, @article.title  %>

<br /><br />
<div class="article-wrapper">
  <%= link_to 'Back to Articles', articles_path %>
  <div class="article-header">
    <div class="article-header-image">
      <%= article_banner @article %>
    </div>
    <h3><%= @article.title %></h3>
  </div>
  <br />
  <div class="article-body row">
    <div class="col-sm-7">
      <%= @article.body %>
    </div>
    <div class="col-sm-5">
      <%= article_middle_image @article %>
    </div>
  </div>
  <hr />
</div>

<div id="cf-comments-app" data-art-id="<%= @art.id %>" data-art-type="art" data-user-id="<%= current_user.id if current_user %>"/>

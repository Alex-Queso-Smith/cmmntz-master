<div class="form">
  <h3 class="text-center">Login</h3>
  <hr>
  <%= form_for @user_session, :url => {:action => "create"} do |form| %>
    <div class="form-group">
      <%= form.label :user_name, class: "text-large" %>
      <%= form.text_field :user_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "text-large" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="custom-control custom-checkbox">
      <%= form.check_box :remember_me, class: "custom-control-input" %>
      <%= form.label :remember_me, "Stay logged in", class: "custom-control-label text-medium" %>
    </div>
    <hr>
    <div class="form-group actions">
      <%= form.submit "Sign In", class: "btn btn-dark btn-lg btn-block" %>
    </div>

  <% end %>
</div>

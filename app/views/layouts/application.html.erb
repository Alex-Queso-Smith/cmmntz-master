<!DOCTYPE html>
<html>
  <head>
    <title>ClassifilterMaster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= javascript_pack_tag    'application' %>
  </head>

  <body id="body">
    <div id="body-container" class="container-fluid">
      <nav id="cf-navbar" class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <%= link_to "Classibridge Times", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <% if Rails.env.production? %>
          <%= link_to "Competition", "https://cf-competition.herokuapp.com/login", class: "nav-link" %>
        <% end %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if current_user %>
              <li class="nav-item dropdown mr-auto">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <%= current_user.user_name %>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "Edit Account", edit_user_path(current_user), class: "dropdown-item" %>
                  <%= link_to "Change Password", edit_password_user_path(current_user), class: "dropdown-item" %>
                  <%= link_to "Settings", edit_settings_user_path(current_user), class: "dropdown-item" %>
                  <div class="dropdown-divider"></div>
                  <%= link_to  "Logout", logout_path, class: "dropdown-item" %>
                </div>
              </li>
            <% else %>
              <%= link_to "Login", login_path, class: "nav-link ml-auto" %>
              <%= link_to "Register", register_path, class: "nav-link ml-auto" %>
            <% end %>
          </ul>
          <!-- <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form> -->
        </div>
      </nav>
      <p></p>
      <%= yield %>
    </div>
  </body>
</html>
